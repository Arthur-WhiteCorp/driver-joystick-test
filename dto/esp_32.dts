/dts-v1/;
/plugin/;

/ {
	fragment@0 {
		target-path = "/soc";
		__overlay__ {
			joy_stick:  joystick@0 {
				compatible = "equipe03,esp32_joystick";
 				pwms = <&pwm 0 5000000 0>; // gpio 12 em microsegundos
				pwm-names = "latch"; // latch uses pwm
				clk-gpios   = <&gpio 27 0>;
				data-gpios  = <&gpio 22 0>;
				message = "Have a good life";
				status = "okay";
			};
		};
	};
	__overrides__ {
        clk_pin   = <&joy_stick>, "clk-gpios:4";
        data_pin  = <&joy_stick>, "data-gpios:4";
    };
};
